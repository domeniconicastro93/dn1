# ============================================================================
# Strike Gaming Cloud - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# ============================================================================

# Node Environment
NODE_ENV=development

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:strike123@localhost:5432/strike

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET=change-me-in-production-use-strong-random-secret
JWT_REFRESH_SECRET=change-me-in-production-use-strong-random-secret-refresh
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ROTATE_REFRESH_TOKENS=false

# ============================================================================
# REDIS (Optional - for caching and rate limiting)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# MESSAGE BUS (Optional - for event-driven architecture)
# ============================================================================
# Kafka
KAFKA_BROKERS=localhost:9092
# OR NATS
NATS_URL=nats://localhost:4222

# ============================================================================
# OBJECT STORAGE (S3-compatible)
# ============================================================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=strike-media
S3_REGION=us-east-1
STORAGE_BASE_URL=http://localhost:9000/strike-media

# ============================================================================
# STRIPE PAYMENTS (Optional - for production)
# ============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================================================
# STREAMING (WebRTC)
# ============================================================================
TURN_SERVER_URL=turn:localhost:3478
TURN_USERNAME=strike
TURN_PASSWORD=strike123
STUN_SERVER_URL=stun:localhost:3478

# ============================================================================
# SERVICE URLs (Internal - for service-to-service communication)
# ============================================================================
GATEWAY_SERVICE_URL=http://localhost:3000
# Auth Service URL - Direct connection to auth-service (preferred)
# If not set, falls back to NEXT_PUBLIC_API_URL (gateway)
# Default: http://localhost:3001
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
GAME_SERVICE_URL=http://localhost:3003
SESSION_SERVICE_URL=http://localhost:3004
REPLAY_SERVICE_URL=http://localhost:3005
EDITING_SERVICE_URL=http://localhost:3006
CLIP_SERVICE_URL=http://localhost:3007
FEED_SERVICE_URL=http://localhost:3008
PAYMENTS_SERVICE_URL=http://localhost:3009
WALLET_SERVICE_URL=http://localhost:3010
ANALYTICS_SERVICE_URL=http://localhost:3011
ORCHESTRATOR_SERVICE_URL=http://localhost:3012
STEAM_LIBRARY_SERVICE_URL=http://localhost:3022
MODERATION_SERVICE_URL=http://localhost:3020
STREAMING_SERVICE_URL=http://localhost:3014
CREATOR_SERVICE_URL=http://localhost:3015
COMMUNITY_SERVICE_URL=http://localhost:3016
CHAT_SERVICE_URL=http://localhost:3017
NOTIFICATION_SERVICE_URL=http://localhost:3018
SEO_SERVICE_URL=http://localhost:3019

# ============================================================================
# FRONTEND
# ============================================================================
FRONTEND_URL=http://localhost:3002
NEXT_PUBLIC_API_URL=http://localhost:3000

# ============================================================================
# COMPUTE / ORCHESTRATOR
# ============================================================================
# Orchestrator service URL for compute endpoints
# This should point to the orchestrator service (not gateway)
# Default: http://localhost:3012
NEXT_PUBLIC_COMPUTE_URL=http://localhost:3012

# ============================================================================
# SUNSHINE CONFIGURATION
# ============================================================================
# Sunshine game streaming server configuration
# Sunshine is used to discover and launch games on VMs
SUNSHINE_URL=http://localhost
SUNSHINE_PORT=47984
SUNSHINE_WEB_PORT=47990
SUNSHINE_USERNAME=admin
SUNSHINE_PASSWORD=change-me
SUNSHINE_USE_HTTPS=false
SUNSHINE_VERIFY_SSL=true
SUNSHINE_TIMEOUT=5000

# ============================================================================
# STEAM INTEGRATION
# ============================================================================
# Steam Web API Key - Get from https://steamcommunity.com/dev/apikey
# Required for fetching owned games and user profiles
STEAM_WEB_API_KEY=your-steam-web-api-key-here

# Steam OpenID Configuration (Optional)
# STEAM_OPENID_REALM=http://localhost:3002
# STEAM_LOGIN_RETURN_URL=http://localhost:3002/api/steam/callback

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info

