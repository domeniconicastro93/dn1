{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "../../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@strike/shared-types": ["../../packages/shared-types/src"],
      "@strike/shared-utils": ["../../packages/shared-utils/src"]
    }
  },
  "include": ["src/**/*", "../../packages/shared-types/src/**/*", "../../packages/shared-utils/src/**/*"],
  "exclude": ["node_modules", "dist"]
}

